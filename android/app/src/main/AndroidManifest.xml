<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.edu.ifba.mybeerapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/beer"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.cesta.ListCestasActivity"
            android:label="@string/title_cesta_activity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".views.cesta.CadastroCestaActivity"
            android:label="@string/title_activity_cadastro_cesta"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>